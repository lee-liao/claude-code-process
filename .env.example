# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Claude Code Configuration
CLAUDE_EXECUTABLE_PATH=claude
DEFAULT_TIMEOUT=300
MAX_CONCURRENT_TASKS=5
TEMP_DIR=./temp

# Authentication
ENABLE_AUTH=false
API_KEY=your-secret-api-key

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Claude API (for direct API calls in the web server)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Claude Code CLI Authentication (for custom API endpoints like BigModel)
# This token is passed to Claude Code CLI via environment variable
# The base URL is configured in claude-settings.json
ANTHROPIC_AUTH_TOKEN=your-auth-token